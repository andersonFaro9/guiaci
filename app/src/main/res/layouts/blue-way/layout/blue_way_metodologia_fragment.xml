<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.MetodologiaDaBlueWayFragment">


        <ImageView
            android:id="@+id/ic_metodologia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/texto_nossa_missao"
            app:srcCompat="@drawable/ic_metodologia" />


        <TextView
            android:id="@+id/blue_way_metodologia"
            android:layout_width="349dp"
            android:layout_height="122dp"
            android:layout_marginBottom="11dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="26dp"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="8sp"
            android:text=" Nossa metodologia é diversificada, dinâmica e divertida. Além disso, nossas aulas são 100% presenciais e utilizamos vários recursos complementares, tais como: vídeos, filmes, séries, músicas, apresentações, jogos e muito mais. "
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ic_metodologia" />

        <TextView
            android:id="@+id/texto_nossa_missao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif"
            android:text="Nossa metodologia"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>